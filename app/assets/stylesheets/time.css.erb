html, body {
  height: 100%;
  width: 100%;
  padding: 0;
  margin: 0;
}

@font-face {
  font-family: 'Grotesk';
  src: url("/assets/fonts/grotesk.ttf) %>") format('truetype');
  font-weight: normal;
  font-style: normal;
}

.container {
  min-height: 100%;
  min-width: 100%;
  background-color: #0B486B;
  padding: 50px 5px;
  font-family: 'Grotesk';
  text-align: center;
}

.container .tic {
  margin-top: 10px;
  text-align: center;
  font-size: 100px;
  color: #3B8686;
}
.container .tock {
  margin-top: 10px;
  text-align: center;
  font-size: 100px;
  color: #CFF09E;
}

.container #clock {
  text-align: center;
  display: inline-block;
}

.container .button {
  background-color: #CFF09E;
  font-weight: lighter;
  color: #3B8686;
}

.container input {
  color: #3B8686;
}

.container .button:hover {
  background-color: #A8DBA8;
}

.container .results {
/*  background-color: rgba(0,0,0,0.3);*/
  border-radius: 10px;
  min-width: 100%;
}

.container .no-padding {
  padding: 0;
}

.container .timebox-container {
  text-align: center;
}

.container li {
  display: inline-block;
  height: auto;
  padding: 0 1%;
}

.container .city {
  text-align: right;
}
/* We use this media query to add styles to any device that supports media queries */
@media only screen { }

/* Used to alter styles for screens at least 768px wide. This is where the grid changes. */
@media only screen and (min-width: 768px) {
  .container .tic {
    margin-top: 10px;
    text-align: center;
    font-size: 180px;
    color: #3B8686;
  }
  .container .tock {
    margin-top: 10px;
    text-align: center;
    font-size: 180px;
    color: #CFF09E;
  }

  .container #search-places {
    margin-top: 6px;
    background-image: url('map_marker.png');
    background-repeat: no-repeat;
    padding-left:30px;
    background-attachment: absolute;
    background-position: 7px 7px;
  }
}

#location {
  margin-top: 6px;
}

